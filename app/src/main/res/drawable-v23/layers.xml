<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Style for "mask" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="#ffffffff" />
            <item android:name="android:shadowColor">#33878787</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">2</item>
        </shape>
    </item>

    <item android:width="12dp" android:height="14dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff000000" />
        </shape>
    </item>

</layer-list>